<!DOCTYPE html>
<html>
<head>
    <title>Vonage Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-white">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>Welcome, <%= user.name %></h4>
            <form method="POST" action="/vonage/logout">
                <button class="btn btn-outline-danger btn-sm">Logout</button>
            </form>
        </div>

        <h5>Add New Slot</h5>
        <form class="row g-2 mb-4" method="POST" action="/vonage/add-slot">
            <div class="col-md-5">
                <input type="date" name="date" class="form-control" required>
            </div>
            <div class="col-md-5">
                <input type="time" name="time" class="form-control" required>
            </div>
            <div class="col-md-2">
                <button class="btn btn-success w-100">Add</button>
            </div>
        </form>

        <h5>Scheduled Slots</h5>
        <% slots.forEach((slot, i) => { %>
            <div class="card mb-2">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <strong><%= slot.date %></strong> @ <%= slot.time %>
                        <% if (!slot.available) { %>
                            <div>
                                <small>Booked by: <%= slot.bookedBy?.name || 'Unknown' %></small>
                            </div>
                            <div>
                                <small>Phone: <%= slot.bookedBy?.phone || 'Unknown' %></small>
                            </div>
                        <% } else { %>
                            <div><small>Available</small></div>
                        <% } %>
                    </div>
                    <form method="POST" action="/vonage/delete-slot">
                        <input type="hidden" name="index" value="<%= i %>">
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>
