<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Schedule a Meeting - Vonage</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f9;
        }
        .vonage-header {
            background-color: #181c32;
            color: white;
            padding: 1rem;
        }
        .slot-card {
            margin-bottom: 1rem;
            border-left: 5px solid #0052cc;
        }
        .slot-unavailable {
            opacity: 0.6;
            text-decoration: line-through;
        }
    </style>
</head>
<body>
    <div class="vonage-header text-center">
        <h4 class="mb-0">VONAGE</h4>
        <small>https://vonage.com</small>
    </div>

    <div class="container mt-4">

        <div class="p-4 d-flex justify-content-center align-items-center">
            <img style="max-width: 500px;" src="<%= config.data.IMAGES.LOGO %>" />
        </div>

        <h5 class="p-3 text-center">
            <p><b><%= config.data.TEXT.QRCODE_INTRO %></b></p>
            <%= config.data.TEXT.QRCODE_INTRO_2 %>
        </h5>
        <!-- Ask for the name, then reveal a QR Code -->
        <div class="d-flex justify-content-center">        
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <form id="qr-form">
                        <div class="d-flex justify-content-center align-items-center gap-3">
                            <div>
                                <input type="text" id="visitorName" class="form-control" placeholder="Type your name" required>
                                <input type="tel" id="visitorPhone" class="mt-2 form-control" placeholder="Type your phone..." required>
                            </div>
                            <button type="submit" class="btn btn-dark">Show <br>QR code</button>
                        </div>
                    </form>
                
                    <div id="qr-wrap" class="text-center mt-4" style="display:none;">
                        <p class="mb-2">Scan to start the RCS chat:</p>
                        <img id="qr-img" alt="RCS QR code" class="img-fluid border rounded p-2 bg-white" />
                        <div class="mt-2">
                            <small class="text-muted" id="qr-uri"></small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div style="height:5rem"></div>

    </div>

    <script>
        let selectedIndex = null;

        //  Get the name and then generate the QR Code
        const form = document.getElementById('qr-form');
        const nameInput = document.getElementById('visitorName');
        const phoneInput = document.getElementById('visitorPhone');
        const qrWrap = document.getElementById('qr-wrap');
        const qrImg = document.getElementById('qr-img');
        const qrUriText = document.getElementById('qr-uri');

        form.addEventListener('submit', (e) => {
            e.preventDefault();
            const name = (nameInput.value || '').trim();
            if (!name) {
                nameInput.focus();
                return;
            }
            const phone = (phoneInput.value || '').trim();
            const params = new URLSearchParams({ name });
            if (phone) params.set('phone', phone);

            // We generate a PNG server-side: /qr?name=<name>
            const src = `/qr?${params.toString()}`;
            qrImg.src = src;

            // For visibility/debug, also show the target URI (from server side, it will be sms:<SENDER_ID>@rbm.goog?body=Hello <name>)
            qrUriText.textContent = `sms:${'<%= config.data.SENDER_ID %>'}@rbm.goog?body=${encodeURIComponent('Hello')}`;
            qrWrap.style.display = 'block';
            qrWrap.scrollIntoView({ behavior: 'smooth', block: 'start' });
        });
    </script>
</body>
</html>
